<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mrc.caterpillar"
    android:versionCode="1"
    android:versionName="1.0"
    android:installLocation="preferExternal">
    <application
        android:icon="@drawable/ic_launcher"
        android:label="Caterpillar"
        android:debuggable="false">
        <activity
            android:name=".CaterpillarMain"
            android:label="Caterpillar"
            android:screenOrientation="landscape"
            android:configChanges="keyboard|keyboardHidden|orientation">
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
        	android:name=".CaterpillarGame"
            android:label="Caterpillar Game"
            android:screenOrientation="landscape"
            android:configChanges="keyboard|keyboardHidden|orientation"
        />
        <activity
			android:name=".CaterpillarSetup"
			android:label="Caterpillar Setup"
			android:screenOrientation="landscape"
			android:configChanges="keyboard|keyboardHidden|orientation"
		/>
        <activity
			android:name=".CaterpillarScore"
			android:label="Caterpillar Scores"
			android:screenOrientation="landscape"
			android:configChanges="keyboard|keyboardHidden|orientation"
		/>
		<activity
			android:name=".HighScoreName"
			android:label="Enter your name"
			android:theme="@android:style/Theme.Dialog"
		/>
    </application>
    <uses-sdk android:targetSdkVersion="8" android:minSdkVersion="4"/>
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
</manifest>
